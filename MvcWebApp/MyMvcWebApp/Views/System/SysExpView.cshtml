@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SysExpView</title>
</head>
<body>
    <div>
        <div style="padding: 0 20px 20px 20px; margin: 10px 0; line-height: 20px; color: #069; padding-bottom: 0;">
            <ul>
                @foreach (var t in (ViewBag.ErrorDetail as Dictionary<string, string>))
                {
                    <li><strong style="color:#F00">@t.Key</strong></li>
                    <li><input value="@t.Value" type="hidden" /><a onclick="OpenLink(this)" href="javascript:void(0);">@t.Value</a></li>
                }
            </ul>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script type="text/javascript">
        function OpenLink(ob)
        { var url = $(ob).prev().val(); window.open(url, "_blank", 'height=' + (window.screen.availHeight * 0.8) + ',width=' + (window.screen.availWidth * 0.9) + ',top=' + (window.screen.availHeight - 30 - (window.screen.availHeight * 0.8)) / 2 + ',left=' + (window.screen.availWidth - 10 - (window.screen.availWidth * 0.9)) / 2 + ',status=yes,toolbar=no,scrollbars=yes,menubar=no,resizable=yes,location=no'); };
    </script>
</body>
</html>
