@{
    Layout = null;

}

<form id="f_edit">
    <table cellpadding="0" cellspacing="0" style="width: 100%; text-align: left; table-layout: fixed; border: 1px solid #BABABA; padding: 8px 4px 4px 4px;margin-bottom:4px ">
        <tr style="padding: 4px 4px 4px 4px;">
            <td class="myfirsttdnm">基础参数名称:</td>
            <td class="myfirsttdnm"><input type="text" name="BASE_NAME" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["BASE_NAME"])" class="easyui-validatebox" validtype="cCheckExist['/System/CheckMenuName']" required style="width:140px;" /></td>
            <td class="myfirsttdnm">基础参数编码:</td>
            <td class="myfirsttdnm"><input type="text" name="BASE_CODE" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["BASE_CODE"].ToString())" class="easyui-numberbox" required style="width:140px;" /></td>
        </tr>
        <tr>
            <td class="myfirsttdnm">分组类别:</td>
            <td class="myfirsttdnm"><input type="text" name="BASE_TYPE" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["BASE_TYPE"])" class="easyui-validatebox" required validtype="length[1,50]" style="width:140px;" /></td>
            <td class="myfirsttdnm">描述:</td>
            <td class="myfirsttdnm"><input type="text" name="DESCRIPTION" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["DESCRIPTION"])" class="easyui-validatebox" validtype="length[1,200]" required style="width:140px;" /></td>

        </tr>
    </table>
    <input type="hidden" name="KEYS" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["KEYS"])" />
    <input type="hidden" name="EORA" value="@this.Request["EORA"]" />
</form>

<input id="bt_valid" class="mybtn" type="button" value="校验" style="display:none" />
<input id="v_s_action" type="text" style="display:none" value="@ViewBag.MySaveAction" />
<input id="tx_save" type="hidden" />

