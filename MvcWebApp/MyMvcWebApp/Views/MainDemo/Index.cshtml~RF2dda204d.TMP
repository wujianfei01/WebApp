        var submit = function (v, h, f) {
            if (f.some == '') {
                // f.some 或 h.find('#some').val() 等于 top.$('#some').val()
                top.$.jBox.tip("请输入点什么。", 'error', { focusId: "some" }); // 关闭设置 some 为焦点
                return false;
            }
            top.$.jBox.info("你输入了：" + f.some);

