@{
    Layout = null;

}

<form id="f_edit">
    <table cellpadding="0" cellspacing="0" style="width: 100%; text-align: left; table-layout: fixed; border: 1px solid #BABABA; padding: 8px 4px 4px 4px;margin-bottom:4px ">
        <tr style="padding: 4px 4px 4px 4px;">
            <td class="myfirsttdnm">角色編號:</td>
            <td class="myfirsttdnm">
                <input type="text" id="KEYS" name="KEYS" style="display:none" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["ROLE_ID"])" />
                <input id="v_power" name="POWER" type="text" style="display:none" value="@ViewBag.Power" />
                <input type="text" name="ROLE_ID" style="width:140px;background-color:#b0aeae;color:#888" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["ROLE_ID"])" readonly />
            </td>
            <td class="myfirsttdnm">角色名稱:</td>
            <td class="myfirsttdnm"><input type="text" name="ROLE_NAME" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["ROLE_NAME"].ToString())" class="easyui-validatebox" required="true" validtype="length[1,50]" style="width:140px" /><font color="red" style="margin-left:2px">*</font></td>
        </tr>
        <tr>
            <td class="myfirsttdnm">角色描述:</td>
            <td class="myfirsttdnm"><input type="text" name="ROLE_DESCRIPTION" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["ROLE_DESCRIPTION"])" class="easyui-validatebox" required="true" style="width:140px" /><font color="red" style="margin-left:2px">*</font></td>
            <td class="myalldr">是否啟用:</td>
            <td class="myalldr">
                <select class="easyui-combobox" name="ENABLE_FLAG" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["ENABLE_FLAG"])" required="true" style="width:140px;">
                    <option value="0">啟用</option>
                    <option value="1">禁用</option>
                </select>    
            </td>
        </tr>
    </table>
   @if (!this.Request["EORA"].Equals("a")) { 
    <div class="easyui-panel" title="菜單權限設置" style="width:648px;height:214px;padding:5px;">
        <ul id="powertree" class="easyui-tree" ></ul>
    </div>
   }
        <input id="bt_valid" class="mybtn" type="button" value="校验" style="display:none" />
        <input id="v_s_action" type="text" style="display:none" value="@ViewBag.MySaveAction" />
        <input id="tx_save" type="text" style="display:none" />
</form>

