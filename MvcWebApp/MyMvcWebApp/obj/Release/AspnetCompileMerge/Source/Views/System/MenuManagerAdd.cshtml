@{
    Layout = null;

}

    <form id="f_edit">
        <table cellpadding="0" cellspacing="0" style="width: 100%; text-align: left; table-layout: fixed; border: 1px solid #BABABA; padding: 8px 4px 4px 4px;margin-bottom:4px ">
            <tr style="padding: 4px 4px 4px 4px;">
                <td class="myfirsttdnm">節點編號:</td>
                <td class="myfirsttdnm">
                    @if (this.Request["EORA"].Equals("a"))
                    {
                        <input type="text" name="ID" style="width: 140px; background-color: #b0aeae; color: #888" value="@(this.Request["EORA"].Equals("a")?"": this.Request["id"])" readonly />
                    }
                    else
                    {
                        <input type="text" name="ID" style="width: 140px; background-color: #b0aeae; color: #888" value="@(this.Request["EORA"].Equals("a")?"": this.Request["id"])" readonly />
                    }
                    <font color="red" style="margin-left:2px">不填</font>
                </td>
                <td class="myfirsttdnm">菜單名稱:</td>
                <td class="myfirsttdnm"><input type="text" name="MENUNAME" value="@(this.Request["EORA"].Equals("a") ? "" : this.Request["MENUNAME"].ToString())" class="easyui-validatebox" required="true" validtype="length[1,50]" style="width: 140px;" /></td>
            </tr>
            <tr>
                @if (this.Request["PARENTID"] == null || !this.Request["PARENTID"].Equals("0"))
                {
                    <td class="myfirsttdnm">父節點編號:</td>
                    <td class="myfirsttdnm">
                        <input type="text" name="PARENTID" value="@(this.Request["EORA"].Equals("a")?"": this.Request["PARENTID"])" class="easyui-combobox" required="true" style="width: 140px;"
                               data-options="valueField: 'id',textField: 'text',url: '/System/MenuManagerCombParentID',
        onSelect: function(rec){if(rec.id==0){$('#STATE').val('open');$('#STATE').attr('readonly','readonly');$('#URL').val('0');$('#URL').attr('readonly','readonly');} else{$('#STATE').val('');$('#STATE').removeAttr('readonly');$('#URL').val('');$('#URL').removeAttr('readonly');}}" />
                    </td>
                }
                else
                {
                    <td class="myfirsttdnm">父節點編號:</td>
                    <td class="myfirsttdnm">
                        <input type="text" name="PARENTID" value="--主菜單--" required="true" style="width: 140px; background-color: #b0aeae; color: #888" readonly />
                        <font color="red" style="margin-left:2px">不可更改</font>
                    </td>
                }
                <td class="myfirsttdnm">狀態:</td>
                <td class="myfirsttdnm"><input type="text" id="STATE" name="STATE" value="@(this.Request["EORA"].Equals("a")?"": this.Request["STATE"])" style="width: 140px;" /></td>
            </tr>
            <tr>
                <td class="myfirsttdnm">URL:</td>
                <td class="myfirsttdnm"><input type="text" id="URL" name="URL" value="@(this.Request["EORA"].Equals("a")?"": this.Request["URL"])" class="easyui-validatebox" required="true" style="width: 140px;" /></td>
                <td class="myfirsttdnm">是否啟用:</td>
                <td class="myfirsttdnm">
                    <select class="easyui-combobox" name="ENABLE" index="1" value="@(this.Request["EORA"].Equals("a")?"": this.Request["ENABLE"])" required="true" style="width: 140px;">
                        <option value="0">啟用</option>
                        <option value="1">禁用</option>
                    </select>
                </td>

            </tr>
        </table>

        <input id="bt_valid" class="mybtn" type="button" value="校验" style="display:none" />
        <input id="v_s_action" type="text" style="display:none" value="@ViewBag.MySaveAction" />
        <input id="tx_save" type="text" style="display:none" />
    </form>

    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/easyui/locale/easyui-lang-zh_TW.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jBox/jquery.jBox-2.3.min.js")"></script>
    <script src="@Url.Content("~/Scripts/control/crossdomainvalid.js")"></script>
    <link href="@Url.Content("~/Scripts/jBox/Skins/GrayCool/jbox.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/gray/easyui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/controls/MyStyle.css")" rel="stylesheet" />