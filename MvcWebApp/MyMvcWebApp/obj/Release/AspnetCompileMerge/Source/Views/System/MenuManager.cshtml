@{
    Layout = null;

}
<!DOCTYPE html>

<html>
<head>
    <title>System.MenuManager</title>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
</head>
<body>
    <form id="f_search">
        <table cellpadding="0" cellspacing="0" style="width: 100%; text-align: left; table-layout: fixed; border: 1px solid #BABABA; padding: 8px 4px 4px 4px;margin-bottom:4px ">
            <tr>
                <td style="font-size: smaller; font-weight: bold; column-span: all; ">菜單查詢</td>
            </tr>
            <tr style="padding: 4px 4px 4px 4px;">
                <td class="myfirsttdnm">菜單名:</td>
                <td class="myfirsttdnm"><input type="text" name="menuname" class="easyui-validatebox" validtype="length[1,30]" style="width:120px" /></td>
            </tr>
        </table>
    </form>
    <div>
        <input id="v_q_action" type="text" style="display:none" value="@ViewBag.MyQueryAction" />
        <input id="v_e_action" type="text" style="display:none" value="@ViewBag.MyEditAction" />
        <input id="v_a_action" type="text" style="display:none" value="@ViewBag.MyAddAction" />
        <input id="v_d_action" type="text" style="display:none" value="@ViewBag.MyDeleteAction" />
        <input id="bt_search" class="mybtn" type="button" value="查詢" />
        <input id="bt_add" class="mybtn" type="button" value="新增" />
        <input id="bt_del" class="mybtn" type="button" value="刪除" />
        <input id="bt_clearall" class="mybtn" type="button" value="清除" />
    </div>
    <table id="datagrid" class="easyui-datagrid">
        <thead>
            <tr>
                <th field="OPT" width="20" align="center" data-options="formatter:OperateFormatter">操作</th>
                <th field="KEYS">KEYS</th>
                <th field="ID" width="60" data-options="hidden:true">節點編號</th>
                <th field="MENUNAME" align="center" width="60">菜單名稱</th>
                <th field="MENUTYPE" width="60">菜單類型</th>
                <th field="PARENTID" width="60" data-options="hidden:true">父節點編號</th>
                <th field="STATE" width="60" data-options="formatter:StateConvertor">狀態</th>
                <th field="URL" width="60">URL</th>
                <th field="ROLEID" width="60" data-options="hidden:true">角色編號</th>
                <th field="ROLECHI" width="60" data-options="hidden:true">角色描述</th>
                <th field="ENABLE" width="60" data-options="formatter:MyConvertor,styler:MyCellStyler">是否啟用</th>
            </tr>
        </thead>
    </table>

    <div id="edit" class="easyui-dialog" closed="true" buttons="#dlg-buttons" title="添加或編輯菜單" style="width:900px;height:300px;">
        <iframe id='editIframe' name='editIframe' frameborder="0" style="width: 100%; height: 100%; overflow: scroll; overflow-y: hidden;"></iframe>
    </div>
    <div id="dlg-buttons">
        <input id="bt_save" class="mybtn" type="button" value="保存" />
        <input id="bt_close" class="mybtn" type="button" value="取消" />
    </div>

