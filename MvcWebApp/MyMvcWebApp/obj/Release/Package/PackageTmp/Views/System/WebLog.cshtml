@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>System.WebLog</title>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
</head>
<body>
    <form id="f_search">
        <table cellpadding="0" cellspacing="0" style="width: 100%; text-align: left; table-layout: fixed; border: 1px solid #BABABA; padding: 8px 4px 4px 4px;margin-bottom:4px ">
            <tr>
                <td style="font-size: smaller; font-weight: bold; column-span: all; ">日誌查詢</td>
            </tr>
            <tr style="padding: 4px 4px 4px 4px;">
                <td class="myfirsttdnm">日誌詳情:</td>
                <td class="myfirsttdnm"><input type="text" name="logmsg" class="easyui-validatebox" style="width:120px" /></td>
            </tr>
        </table>
    </form>
    <div>
        <input id="v_q_action" type="text" style="display:none" value="@ViewBag.MyQueryAction" />
        <input id="bt_search" class="mybtn" type="button" value="查詢" />
        <input id="bt_export" class="mybtn" type="button" value="下載日誌" onclick="window.location.href = '/System/Export';" />
    </div>

    <table id="datagrid" class="easyui-datagrid">
        <thead>
            <tr>
                <th field="DATETIME" align="center" width="60">日誌發生時間</th>
                <th field="THREAD" width="60">線程編號</th>
                <th field="LOG_LEVEL" width="60">日誌等級</th>
                <th field="LOGGER" width="60">日誌記錄模塊名稱</th>
                <th field="MESSAGE" width="60">日誌詳情</th>
            </tr>
        </thead>
    </table>

    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/easyui/locale/easyui-lang-zh_TW.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jBox/jquery.jBox-2.3.min.js")"></script>
    <script src="@Url.Content("~/Scripts/control/pagecontrol.js")"></script>
    <script src="@Url.Content("~/Scripts/control/querypage-query.js")"></script>
    <link href="@Url.Content("~/Scripts/jBox/Skins/GrayCool/jbox.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/gray/easyui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/controls/MyStyle.css")" rel="stylesheet" />
</body>
</html>