@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@Util.ConfigManager.ReadValueByKey(Util.ConfigurationFile.WebConfig, "WebMainTitle")</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
</head>
<body class="easyui-layout">
    <div id="OverTimeLogin" class="easyui-dialog" data-options="closed:true,modal:true">
        <iframe width="726px" scrolling="no" height="497px" frameborder="0" id="iOverTimeLogin"></iframe>
    </div>
    <div data-options="region:'north',border:false,split:true" style="height: 60px;">
        <div class="define-head">
            <div class="define-logo">
                <div id="LoginTopLine">@Util.ConfigManager.ReadValueByKey(Util.ConfigurationFile.WebConfig, "WebMainTitle")</div>
                <div id="LoginBotoomLine">@Util.ConfigManager.ReadValueByKey(Util.ConfigurationFile.WebConfig, "WebTitle")</div>
            </div>
            <div class="define-account">
                <input id="btn_fs" type="button" value="全屏" />
                當前在線人數:@System.Web.HttpContext.Current.Application["online"]
            </div>
        </div>
    </div>
    <div data-options="region:'west',split:true,title:'菜单列表'" style="width: 200px; height:100%; padding-top: 2px; background-color:#fff; overflow:auto">
        <div class="panel-loading" id="LoadingDiv">Loading...</div>
        <ul class="easyui-tree" id="tree"></ul>
    </div>
    <div data-options="region:'south',border:false" style="height: 20px;">
        <div class="define-bottom" id="showTime">
            <font style="margin-right:50px" color="black">WNC @System.DateTime.Now.Year &copy; 版權所有</font>
            <font color="black">歡迎:<font color="red">@ViewBag.UserName</font> 工號:@ViewBag.UserId 所屬部門:@ViewBag.DeptNo &nbsp;&nbsp;&nbsp;&nbsp; 當前時間:</font>
            <font id="time" color="black"></font>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <div id="mainTab" class="easyui-tabs" data-options="fit:true">
            <div title="Notice" data-options="closable:true" style="overflow:scroll; background:#fff">
                <div style="padding: 0 20px 20px 20px; margin: 10px 0; line-height: 20px; color: #069; padding-bottom: 0;">
                    <ul>
                        <li><strong style="color:#F00">[2016-05-26] WNC Web Demo v1.3.1 正式版</strong></li>
                        <li style="text-indent:2em"> - [修復] 新增后點取消會導致刷新數據</li>
                        <li style="text-indent:2em"> - [修復] gridview自適應窗體bug </li>
                        <li style="text-indent:2em"> - [修復] 多餘滾動條清除</li>
                        <li style="text-indent:2em"> - [修復] ie8下首次請求中文亂碼</li>
                        <li style="text-indent:2em"> - [新增] gridview數據行自定義格式化</li>
                        <li style="text-indent:2em"> - [新增] 系統日誌查詢頁面</li>
                        <li style="text-indent:2em"> - [新增] 基礎參數維護頁面</li>
                        <li style="text-indent:2em"> - [新增插件] log插件(深度集成log4net)</li>
                        <li style="text-indent:2em"> - [新增插件] excel導出插件</li>
                    </ul>
                </div>
                <div style="padding: 0 20px 20px 20px; margin: 10px 0; line-height: 20px; color: #069; padding-bottom: 0;">
                    <ul>
                        <li><strong style="color:#F00">[2016-05-16] WNC Web Demo v1.3 正式版</strong></li>
                        <li style="text-indent:2em"> - [新增] 插件模塊:為基本功能擴展留出空間</li>
                        <li style="text-indent:2em"> - [新增] 文檔上傳下載功能 </li>
                        <li style="text-indent:2em"> - [新增] 插件形式實現Excel導入導出</li>
                    </ul>
                </div>
                <div style="padding: 0 20px 20px 20px; margin: 10px 0; line-height: 20px; color: #069; padding-bottom: 0;">
                    <ul>
                        <li><strong style="color:#F00">[2016-04-01] WNC Web Demo v1.2 正式版</strong></li>
                        <li style="text-indent:2em"> - [修復] 查詢后自動選中最後一行數據導致刪除異常 </li>
                        <li style="text-indent:2em"> - [修復] 新增權限管理功能</li>
                    </ul>
                </div>
                <div style="padding: 0 20px 20px 20px; margin: 10px 0; line-height: 20px; color: #069; padding-bottom: 0;">
                    <ul>
                        <li><strong style="color:#F00">[2016-03-30] WNC Web Demo v1.1 正式版</strong></li>
                        <li style="text-indent:2em"> - [修復] 跨域調用問題 </li>
                        <li style="text-indent:2em"> - [修復] 新增校驗功能,棄用mvc model的校驗功能</li>
                        <li style="text-indent:2em"> - [新增] 查詢頁回車提交功能</li>
                        <li style="text-indent:2em"> - [新增] 保存成功后頁面自動清空功能</li>
                    </ul>
                </div>
                <div style="padding: 0 20px 20px 20px; margin: 10px 0; line-height: 20px; color: #069; padding-bottom: 0;">
                    <ul>
                        <li><strong>[2016-03-24] WNC Web Demo v1.0 初始版本</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="tab_menu" class="easyui-menu" style="width: 150px;">
        <div id="tab_menu-tabrefresh" data-options="iconCls:'icon-reload'">
            刷新
        </div>
        <div id="tab_menu-openFrame">
            在新的窗體打開
        </div>
        <div id="tab_menu-tabcloseall">
            關閉所有
        </div>
        <div id="tab_menu-tabcloseother">
            關閉其他標籤頁
        </div>
        <div class="menu-sep">
        </div>
        <div id="tab_menu-tabcloseright">
            關閉右邊
        </div>
        <div id="tab_menu-tabcloseleft">
            關閉左邊
        </div>
        <div id="tab_menu-tabclose" data-options="iconCls:'icon-remove'">
            關閉
        </div>
        <div id="menu" class="easyui-menu" style="width: 150px;">
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/mainpage.js")"></script>
    <script src="@Url.Content("~/Scripts/jBox/jquery.jBox-2.3.min.js")"></script>
    <link href="@Url.Content("~/Scripts/jBox/Skins/GrayCool/jbox.css")" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/mystyle/css")
    @*@Styles.Render("~/Content/themes/blue/css")*@
    @*@Styles.Render("~/Content/themes/gray/css")*@
    @*@Styles.Render("~/Content/themes/metro/css")*@
    @Scripts.Render("~/bundles/home")
 </body>
 </html>
